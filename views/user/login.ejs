<% layout("layouts/boilerplate.ejs") %>
<div class="container">
  <form action="/" id="animation">
    <div class="card" style="width: 38rem; margin-top: 100px">
      <div class="card-header">
        <h1 class="card-title display-6">Login Yourself</h1>
      </div>
      <div class="card-body">
        <div class="mb-3">
          <label class="form-label" for="username">Username</label>
          <input
            type="text"
            class="form-control"
            id="username"
            name="user[username]"
          />
        </div>
        <div class="mb-3">
          <label class="form-label" for="password">Password</label>
          <input
            type="password"
            class="form-control"
            name="user[password]"
            id="password"
          />
        </div>
      </div>
    </div>
    <div class="mb-3">
      <button class="btn btn-success mt-4">login</button>
    </div>
  </form>
</div>
